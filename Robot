package ru.geekbrains.java_core.homework1;

public class Robot implements Participant {
    public boolean lost = false; // Поле "предварительного проигрыша" для реализации логики
    private final int runLimit;
    private final int jumpLimit;

    public Robot(int runLimit, int jumpLimit) {
        this.runLimit = runLimit;
        this.jumpLimit = jumpLimit;
    }

    @Override
    public boolean getStatus() {
        return this.lost;
    }

    @Override
    public void run(RunningTrack runningTrack) { // простые условия на сравнение данных
        if (runningTrack.length <= runLimit) {
            System.out.printf("Робот успешно преодолел беговую дорожку - %s\n", runningTrack);
        } else {
            System.out.printf("Робот не справился с беговой дорожкой, что странно - %s\n", runningTrack);
            lost = true; // подтверждение "предварительного проигрыша"
        }
    }

    @Override
    public void jump(Wall wall) { // подтверждение "предварительного проигрыша"
        if (wall.height <= jumpLimit) {
            System.out.printf("Робот легко перепрыгнул стену - %s\n", wall);
        } else {
            System.out.printf("Робот не смог перепрыгнуть стену - %s\n", wall);
            lost = true; // подтверждение "предварительного проигрыша"
        }
    }
}
